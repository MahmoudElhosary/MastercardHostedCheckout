@{
    ViewData["Title"] = "Checkout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="InitiateCheckout" method="post">
                <div class="mb-3">
                    <label>Amount</label>
                    <input type="number" step="0.001" name="amount" value="1.000" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label>Currency</label>
                    <select name="currency" class="form-select">
                        <option value="KWD" selected>KWD</option>
                        <option value="USD">USD</option>
                        <option value="EUR">EUR</option>
                    </select>
                </div>
                <button class="btn btn-primary w-100">Pay Now</button>
            </form>
        </div>
    </div>
</div>
