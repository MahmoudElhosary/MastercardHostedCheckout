@{
    ViewData["Title"] = "Payment Failed";
}

<div class="container mt-5 text-center">
    <div class="card shadow-sm p-5 border-danger">
        <div class="mb-4">
            <i class="bi bi-x-circle-fill text-danger" style="font-size: 4rem;"></i>
        </div>
        <h1 class="display-5 fw-bold mb-3">Payment Failed</h1>
        <p class="lead mb-4">We're sorry, but there was an issue processing your payment.</p>

        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-danger d-inline-block text-start p-3">
                <strong>Error Details:</strong> @ViewBag.ErrorMessage
            </div>
        }

        <p class="mt-3">Please try again or contact support if the problem persists.</p>

        <div class="mt-4">
            <a asp-action="Index" class="btn btn-outline-danger px-5 py-2">Try Again</a>
        </div>
    </div>
</div>
